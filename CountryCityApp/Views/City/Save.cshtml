@model CountryCityApp.Models.City

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
</head>
<body>
    <div>
        
        @using (Html.BeginForm("Save", "City", FormMethod.Post))
        {
            <table>
                <tr>
                    <td>
                        Name
                    </td>
                    <td>
                        @Html.EditorFor(x => x.Name)
                        @Html.ValidationMessageFor(x => x.Name)
                    </td>
                </tr>
                <tr>
                    <td>
                        About
                    </td>
                    <td>
                        @Html.EditorFor(x => x.About)
                        @Html.ValidationMessageFor(x => x.About)
                    </td>
                </tr>
                <tr>
                    <td>
                        NoOfDwellers
                    </td>
                    <td>
                        @Html.EditorFor(x => x.NoOfDwellers)
                        @Html.ValidationMessageFor(x => x.NoOfDwellers)

                    </td>
                </tr>

                <tr>
                    <td>
                        Location
                    </td>
                    <td>
                        @Html.EditorFor(x => x.Location)
                        @Html.ValidationMessageFor(x => x.Location)

                    </td>
                </tr>
                <tr>
                    <td>
                        Weather
                    </td>
                    <td>
                        @Html.EditorFor(x => x.Weather)
                        @Html.ValidationMessageFor(x => x.Weather)

                    </td>
                </tr>
                <tr>
                    <td>
                        Country
                    </td>
                    <td>
                        @Html.DropDownList("CountryId")
                        @Html.ValidationMessageFor(x => x.CountryId)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Save" />
                    </td>
                </tr>
            </table>
        }

        <div>
            <table class="table table-bordered ">
                <thead>


                    <tr>
                        <th>Serial</th>
                        <th>Name</th>
                        <th>NoOfDwellers</th>
                        <th>Country</th>
                    </tr>

                </thead>
                <tbody>
                    @if (ViewBag.cities != null)
                    {
                        int i = 0;
                        foreach (var city in ViewBag.cities)
                        {
                            i++;
                            <tr>
                                <td>
                                    @i
                                </td>
                                <td>@city.Name</td>
                                <td>@city.NoOfDwellers</td>
                                <td>@city.aCountry.Name</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
         
    </div>
</body>
</html>
